<script>
    $(document).ready(() => {
        let numberID = 2;
        $("#button").click(function () {
            if (numberID % 2 == 0) {
                let rowWhite = `<div class="namerow">
        <div class="r2"><div>Round ${numberID}</div></div>
        <div class="r2"><div class="form-control">-5</div></div>
        <div class="r2"><div class="form-control">-6</div></div>
        <div class="r2"><div class="form-control">-7</div></div>
        <div class="r2"><div class="form-control">-9</div></div>
    </div>`;
                $(".article-list").append(rowWhite);
                numberID++;
            }
            else {

                let rowGray = `<div class="namerow">
        <div class="r1"><div>Round ${numberID}</div></div>
        <div class="r1"><div class="form-control">-5</div></div>
        <div class="r1"><div class="form-control">-6</div></div>
        <div class="r1"><div class="form-control">-7</div></div>
        <div class="r1"><div class="form-control">-9</div></div>
    </div>`;
                $(".article-list").append(rowGray);
                numberID++;
            }




        })
    });
</script>